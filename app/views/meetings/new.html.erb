<%= form_for @meeting do |f| %>
<div class="row">

<div class="container col-lg-6 col-md-8 col-sm-10">

  <% if @meeting.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <ul>
        <% @meeting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="shadow-lg p-3 mb-5 bg-white rounded mt-5">
    <h3 class="text-center">Start a new meeting</h3>

    <div class="form-group">
      <%= f.label :"Meeting Title" %>
      <%= f.text_field :title, :class=> "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :"description" %>
      <%= f.text_area :description, :class=> "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :"First Agenda" %>
      <%= f.text_field :agenda1, :class=> "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :"Second Agenda" %>
      <%= f.text_field :agenda2, :class=> "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :"Third Agenda" %>
      <%= f.text_field :agenda3, :class=> "form-control"%>
    </div>
    <div class="form-group">

      <%= f.label :start %>
      <%= f.datetime_select :start, :class=> "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :duration %>
      <%= f.number_field :duration, :class=> "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label "Participants:" %><br/>
      <%= f.collection_check_boxes :user_ids, @participants, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>

    <%= f.submit "Add Meeting", :class=>"btn btn-info"%>
  </div>
</div>

<% end %>
