<h1>Add Meeting</h1>
<% if @meeting.errors.any? %>
<ol>
  <% @meeting.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ol>
<% end %>

<%= form_for @meeting do |f| %>
<%= f.label :title  %>
<%= f.text_field :title %>
<%= f.label :agenda1  %>
<%= f.text_field :agenda1 %>
<%= f.label :agenda2  %>
<%= f.text_field :agenda2 %>
<%= f.label :agenda3  %>
<%= f.text_field :agenda3 %>
<%= f.label :start  %>
<%= f.datetime_select :start %>
<%= f.label :duration  %>
<%= f.number_field :duration %>
<br/>
<%= f.label "Participants" %><br />
<%= f.collection_check_boxes :user_ids, @participants, :id, :name do |b| %>
  <div class="collection-check-box">
    <%= b.check_box %>
    <%= b.label %>
  </div>
<% end %>


<%= f.submit %>
<% end %>
