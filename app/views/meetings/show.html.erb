<h2><%= @meeting.title %></h2>

<hr>

<p class="text-muted"><%= @meeting.start.strftime('%A, %d %b %Y %l:%M %p %z')  %></p>


<div class="float-right">
  <%= link_to "Edit", edit_meeting_path(@meeting), :class => 'btn btn-outline-info btn-sm' %>
  <%= link_to "Delete", meeting_path(@meeting), :method => 'delete', :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-outline-secondary btn-sm' %>
</div>

<h5>Agenda</h5>
<ol>
  <li><%= @meeting.agenda1 %></li>
  <li><%= @meeting.agenda2 %></li>
  <li><%= @meeting.agenda3 %></li>
</ol>

<p>Meeting Duration: <%= @meeting.duration %> minutes</p>

<p>Host: <%= @meeting.host.name %></p>

<p>Participants:</p>
<ul>
<% @meeting.users.each do |user|  %>
  <li><%= user.name %></li>
<% end %>
</ul>


<h5>Actions</h5>
<ul>
<% @meeting.actions.each do |action|  %>
  <li><%= action.description %> - <%= action.duedate %> - <%= action.is_done %> - <%= action.user.name %>
  <%= link_to 'delete', meeting_action_path(@meeting,action), :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
   -
  <%= link_to 'toggle', complete_action_path(action), :method => 'put' %>

  </li>
<% end %>
</ul>

<% if true || @meeting.start.past? %>
  <%= form_for([@meeting, @meeting.actions.build], :as => :meeting_action) do |f| %>
    <%= f.label :description  %>
    <%= f.text_field :description %>
    <%= f.label :duedate  %>
    <%= f.date_field :duedate %>
    <%= f.submit %>
  <% end %>
<% end %>
